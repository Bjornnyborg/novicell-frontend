{
  "name": "npm-build-boilerplate",
  "version": "1.2.0",
  "description": "A set of common build tasks written with npm scripts.",
  "author": "Damon Bauer <hello@damonbauer.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damonbauer/npm-build-boilerplate"
  },
  "bugs": "https://github.com/damonbauer/npm-build-boilerplate/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist/**/*",
    "css": "postcss -c tasks/css/postcss.config.js css/master.css -o dist/css/master.min.css",
    "js": "npm run lint && npm run uglify",
    "images": "imagemin images/**/*.{jpg,png,svg,gif} -o dist/images",
    "icons": "svgo -f icons/ -o dist/icons && svg-sprite-generate -d dist/icons -o dist/icons/icons.svg",
    "html": "node tasks/html/html.js",
    "fonts": "copyfiles fonts/**/* dist/",
    "build": "npm run css && npm run js && npm run images && npm run icons",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint 'js/master.js' -o dist/js/master.min.js",
    "uglify": "mkdirp dist/js -p && uglifyjs js/*.js -m -o dist/js/master.min.js && uglifyjs js/*.js -m -c -o dist/js/master.min.js",
    "watch:css": "onchange \"css/**/*.css\" -- npm run css",
    "watch:js": "onchange \"js/**/*.js\" -- npm run js",
    "watch:images": "onchange \"images/**/*.{jpg,png,svg,gif}\" -- npm run images",
    "watch:icons": "onchange \"icons/**/*.svg\" -- npm run icons",
    "watch:html": "onchange \"html/**/*.html\" -- npm run html",
    "watch:fonts": "onchange \"fonts/**/*\" -- npm run fonts",
    "watch": "npm-run-all -p watch:css watch:js watch:images watch:icons watch:fonts watch:html",
    "postinstall": "npm run build && npm run watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "browser-sync": "^2.12.8",
    "copyfiles": "^1.2.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "flatnest": "^1.0.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^2.1.1",
    "onchange": "^3.2.1",
    "postcss": "^6.0.1",
    "postcss-cli": "^4.0.0",
    "postcss-css-variables": "^0.7.0",
    "postcss-nested": "^2.0.2",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6",
    "uglify-js": "^3.0.14"
  }
}
